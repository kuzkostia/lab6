@page "/service"
@using lab6.Data
@inject ServiceInterface ServiceInt
@inject NavigationManager navigationManager
<h1>Add service</h1>
<EditForm Model="service" OnSubmit="CreateService">
	<DataAnnotationsValidator />
	<ValidationSummary />
	<div class="form-group row">
	  <label>ServiceName</label>
	  <div class="col-sm-10">
		  <InputText @bind-Value="Service.ServiceName"/>
	  </div>
  </div>
  <div class="form-group row">
		<label>ServiceDescription</label>
		<div class="col-sm-10">
			<InputText @bind-Value="Service.ServiceDescription"/>
		</div>
  </div>
  <div class="col-sm-10 pt-2">
	  <button type="submit">Add service</button>
  </div>
</EditForm>
@code {
	Service Service = new Service();

	public async Task CreateService()
	{
		await ServiceInt.Create(Service);
		navigationManager.NavigateTo("/service");
	}
}
